    "@types/node": "^20.9.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "http-server": "^14.1.1",
    "legally": "^3.5.10",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "8.8.0"
